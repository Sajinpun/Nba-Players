@model CricketPlayers.Models.Player

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>
<hr />

@using (Html.BeginForm())
{
    <div class="container">
        <img src="@Url.Content(Model.Picture)" height="100" />
        <h4>Are you sure you want to delete this player?</h4>
        <hr />

        <ul class="list-inline">
            <li style="font-weight:bold;">Name:</li>
            @Html.DisplayFor(model => model.Name)
        </ul>

        <ul class="list-inline">
            <li style="font-weight:bold;">Added by:</li>
            @Html.DisplayFor(model => model.User)
        </ul>

        <input type="submit" value="Delete" class="btn btn-danger" />
        @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" } )
    </div>
}